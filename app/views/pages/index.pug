extends ../layouts/default

block content
  .row
    .col-xl-3.col-lg-4.first-column
      .user-information
        .row
          .w-100.text-center
             a(href="/users/" + req.user.id)
              img(class="profile__image", src=req.user.avatar_url)
             h3 #{req.user.username}
             h6 @#{req.user.url_path}
          .col-8.user-information__text
            a(href="/users/" + req.user.id)
              h4 #{req.user.name}
            .user-information__stats.user-information__stats_small
              ul
                li
                  span.user-information__stat-title Tweets
                  span
                    a(href="/users/" + req.user.id) #{tweetCount}
                li
                  span.user-information__stat-title Following
                  span 
                    a(href="/users/" + req.user._id + "/following")  #{followingCount}
                li
                  span.user-information__stat-title Followers
                  span
                    a(href="/users/" + req.user._id + "/followers")  #{followerCount}
          .col-md-12.user-information__stats.user-information__stats_large
            ul
              li
                span.user-information__stat-title Tweets
                span
                  a(href="/users/" + req.user.id) #{tweetCount}
              li
                span.user-information__stat-title Following
                span 
                  a(href="/users/" + req.user._id + "/following")  #{followingCount}
              li
                span.user-information__stat-title Followers
                span
                  a(href="/users/" + req.user._id + "/followers")  #{followerCount}

    .col-xl-6.col-lg-8.second-column
      include ../components/modals/new-tweet-iframe
      include ../components/tweets
      include ../components/pagination

    include ../components/recommended-user
